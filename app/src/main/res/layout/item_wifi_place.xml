<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/margin_keyline"
    android:layout_marginLeft="@dimen/margin_keyline"
    android:layout_marginRight="@dimen/margin_keyline"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_wifi_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del lugar"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="@dimen/item_subheading" />

        <TextView
            android:id="@+id/txt_wifi_place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_wifi_place_name"
            android:text="Aqui va la dirección del lugar con el distrito"
            android:textSize="@dimen/item_body" />

        <TextView
            android:id="@+id/txt_wifi_place_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_wifi_place_address"
            android:text="Estas son las notas que podría tener"
            android:textSize="@dimen/item_body" />
    </RelativeLayout>
</android.support.v7.widget.CardView>