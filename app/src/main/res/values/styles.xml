<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_cyan_500</item>
        <item name="colorPrimaryDark">@color/material_cyan_900</item>
        <item name="colorAccent">@color/material_cyan_A200</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:icon" >@mipmap/ic_logo</item>
        <item name="icon" >@mipmap/ic_logo</item>
        <item name="android:logo">@mipmap/ic_logo</item>
        <item name="android:displayOptions">homeAsUp|useLogo</item>
    </style>

    <style name="AlternativeAppTheme" parent="Theme.AppCompat"></style>

    <style name="myCustomMenuTextApearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CodeFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="PlaceListStyle">
        <item name="android:choiceMode">singleChoice</item>
    </style>



</resources>
